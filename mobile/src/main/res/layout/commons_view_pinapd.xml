<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:clipChildren="false">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:elevation="15dp"
            >

        <TextView
                android:id="@+id/numpad_btn_1"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_1"
                android:tag="1"
                />

        <TextView
                android:id="@+id/numpad_btn_2"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_2"
                android:tag="2"
                />

        <TextView
                android:id="@+id/numpad_btn_3"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_3"
                android:tag="3"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:elevation="15dp"
            >

        <TextView
                android:id="@+id/numpad_btn_4"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_4"
                android:tag="4"
                />

        <TextView
                android:id="@+id/numpad_btn_5"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_5"
                android:tag="5"
                />

        <TextView
                android:id="@+id/numpad_btn_6"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_6"
                android:tag="6"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:elevation="15dp"
            >

        <TextView
                android:id="@+id/numpad_btn_7"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_7"
                android:tag="7"
                />

        <TextView
                android:id="@+id/numpad_btn_8"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_8"
                android:tag="8"
                />

        <TextView
                android:id="@+id/numpad_btn_9"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_9"
                android:tag="9"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:elevation="15dp"
            >

        <ImageView
                android:id="@+id/numpad_btn_backspace"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_backspace"
                android:scaleType="center"
                />

        <TextView
                android:id="@+id/numpad_btn_0"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numpad_0"
                android:tag="0"
                />

        <ImageView
                android:id="@+id/numpad_btn_ok"
                style="@style/Fly.Button.Numpad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_check_black_24dp"
                android:scaleType="center"
                />

    </LinearLayout>

</LinearLayout>