<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        xmlns:tools="http://schemas.android.com/tools">

    <Button
            android:id="@+id/waiterTicketordersHeaderBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|bottom"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/color_light_blue"
            android:textColor="#fff"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Serve Now"/>

    <TextView
            android:id="@+id/waiterTicketordersHeader"
            style="@style/Typography.Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/waiterTicketordersHeaderBtn"
            android:layout_alignWithParentIfMissing="true"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/color_primary_dark"
            android:textSize="18sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Portions"/>



</RelativeLayout>